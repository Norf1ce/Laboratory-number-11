// Любевич Нікіта 101 група (4 варіант) 

#include <stdio.h>
#include <stdlib.h>

int main()
{
    int N, i;
    int *A;
    int *B = NULL;
    int k = 0;

    printf("N = ");
    scanf("%d", &N);

    //масив A
    A = (int*)malloc(N * sizeof(int));

    //елементи A
    for(i = 0; i < N; i++)
        scanf("%d", &A[i]);

    //від’ємні елементи і запис у B
    for(i = 0; i < N; i++)
    {
        if(A[i] < 0)
        {
            k++;
            B = (int*)realloc(B, k * sizeof(int));
            B[k-1] = A[i];
        }
    }

    // вивід B
    printf("B: ");
    for(i = 0; i < k; i++)
        printf("%d ", B[i]);

    free(A);
    free(B);

    return 0;
}
